<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2sp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/setLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="@string/set"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/workoutLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="@string/workout"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/setLbl"
            app:layout_constraintStart_toEndOf="@+id/setLbl" />

        <TextView
            android:id="@+id/workoutTimeLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/minute"
            app:layout_constraintBaseline_toBaselineOf="@+id/workoutLbl"
            app:layout_constraintStart_toEndOf="@+id/workoutLbl" />

        <TextView
            android:id="@+id/restLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/rest"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/setLbl"
            app:layout_constraintStart_toEndOf="@+id/workoutTimeLbl" />

        <TextView
            android:id="@+id/restTimeLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/minute"
            app:layout_constraintBaseline_toBaselineOf="@+id/restLbl"
            app:layout_constraintStart_toEndOf="@+id/restLbl" />

        <TextView
            android:id="@+id/dateLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/setLbl"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>