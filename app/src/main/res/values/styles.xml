<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="buttonStyle">@style/CustomButtonStyle</item>
        <item name="android:fontFamily">@font/jost_400_book</item>
        <item name="android:textColor">@color/textColor</item>

        <item name="android:homeAsUpIndicator">@drawable/ic_baseline_arrow_back_32</item>
    </style>

    <style name="NightAppTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/nightBackground</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CustomButtonStyle" parent="android:Widget.Material.Light.Button">
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="textAllCaps">false</item>
        <item name="android:background">@drawable/radius_button</item>
    </style>

    <style name="NumberPicker">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="android:textColorHighlight">@android:color/darker_gray</item>
        <item name="android:textColorPrimary">@android:color/darker_gray</item>
    </style>
</resources>