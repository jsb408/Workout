<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/gradient1</item>
        <item name="colorPrimaryDark">@color/gradient2</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/background</item>

        <item name="buttonStyle">@style/CustomButtonStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomButtonStyle" parent="android:Widget.Material.Light.Button">
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:backgroundTint">@color/gradient2</item>
    </style>
</resources>